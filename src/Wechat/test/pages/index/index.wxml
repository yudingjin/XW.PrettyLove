<!-- pages/login/login.wxml -->
<view class="login-container">
  <view class="title">欢迎登录</view>
  
  <button 
    class="login-btn" 
    bindtap="doLogin" 
    loading="{{loading}}"
    disabled="{{loading}}"
  >
    微信快捷登录
  </button>
  
  <view class="tips">
    登录即表示同意《用户协议》和《隐私政策》
  </view>
</view>
    